<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FenProduits">

    <TextView
        android:id="@+id/ID_readBuffer"
        android:layout_width="324dp"
        android:layout_height="18dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="76dp"
        android:text="*"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/redBufferText"
        android:layout_width="46dp"
        android:layout_height="18dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="76dp"
        android:text="Scan :"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_Connexion"
        android:layout_width="107dp"
        android:layout_height="48dp"
        android:layout_marginStart="284dp"
        android:layout_marginTop="16dp"
        android:text="Connexion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="BT Status :"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ID_textView_BTStatus"
        android:layout_width="188dp"
        android:layout_height="18dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="32dp"
        android:text="*"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_ValidCommande"
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="472dp"
        android:text="Validation de la Commande"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>